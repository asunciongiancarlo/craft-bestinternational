{#            </div>#}
{#        </section>#}
       <div class="hero-wrapper">
           <div class="hero-responsive ws">
               <iframe src="https://player.vimeo.com/video/821510459?&api=1&background=1&muted=1&loop=1&autoplay=1" frameborder="0" allow="autoplay" allowfullscreen title="Introducing.mp4"></iframe></div>
           </div>
       </div>


        <section class="featured-story">
                <div class="featured-story__flex content-column">

                    <div class="featured-story__content">
                        {{ entry.richText }}
                        <p>
                            <a href="products/" class="cta-link">View</a>
                        </p>
                    </div>

                    {% if entry.photos.count() > 0 %}
                        <div class="featured-story__slider">
{#                            <div class="slider">#}
{#                                <div class="slider__nav">#}
{#                                    <button type="button" class="slider__prev">#}
{#                                        <img src="{{ siteUrl }}/static/images/arrow-prev.svg" alt="Previous">#}
{#                                    </button>#}
{#                                    <button type="button" class="slider__next">#}
{#                                        <img src="{{ siteUrl }}/static/images/arrow-next.svg" alt="Next">#}
{#                                    </button>#}
{#                                </div>#}
{#                            <!-- Slider Component -->#}
{#                            {% include "components/slider" with {#}
{#                                photos: entry.photos.all()#}
{#                            } %}#}
{#                            </div>#}

                            <div class="slick-slider">
                                {% for photo in entry.photos.all() %}
                                    <div><img data-lazy="{{ photo.getUrl('slider') }}" alt="{{ photo.title }}"></div>
                                {% endfor %}
                            </div>

                        </div>
                    {% endif %}

                </div>
            </section>


        <section class="section section--more-padding section--light section--angled-top">
            <div class="content-column filter-wrapper">
                <div class="banner"><img src="{{ siteUrl }}static/images/banner-products.png" alt="" ></div>
                <div class="filter-section">
                    <div class="filter-block">
                        <div class="title item">Pest</div>
                        <div class="options item">
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Fly</span>
                            </div>
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Ants</span>
                            </div>
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Mosquito</span>
                            </div>
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Larva</span>
                            </div>
                        </div>
                    </div>
                    <div class="filter-block">
                        <div class="title item">Category</div>
                        <div class="options item">
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Insecticide</span>
                            </div>
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Termiticide</span>
                            </div>
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Larvicide</span>
                            </div>
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Adulticide</span>
                            </div>
                        </div>
                    </div>
                    <div class="filter-block">
                        <div class="title item">Type</div>
                        <div class="options item">
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Liquid</span>
                            </div>
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Powder</span>
                            </div>
                            <div class="option">
                                <input type="checkbox" value="Fly" />
                                <span>Gel</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="two-columns product-listings grid-iso">
                    {% set products = craft.entries.section('products').all() %}
                    {% set c = craft.entries.section('products').count() %}

                    {% cache using key 'products-listing' %}
                        {% for product in products  %}
                            <div class="two-columns__item product-item">

                                {% set photo = product.productThumbnail.one() %}
                                <div class="two-columns__content product-item__content">
                                    <h2>{{ product.title }}</h2>
                                    <p>{{ product.shortDescription }}<p>
                                        <a href="{{ product.url }}" class="cta-link">View</a>
                                    </p>
                                </div>


                                <div class="two-columns__image product-item__image">
                                    <a href="{{ product.url }}">
                                        {% if photo %}
                                            <img src="{{ photo.url }}" loading="lazy" alt="{{ photo.title }}">
                                        {% else %}
                                            <img src="../web/static/images/photos/mohit-suthar-a1_tFcBSp7w-unsplash.jpg" alt="Photo">
                                        {% endif %}
                                    </a>
                                </div>

                            </div>
                        {% endfor %}
                    {% endcache %}

                </div>
            </div>
            <div class="content-column centered testimonials">

                {{ entry.testimonyintro }}

                <div class="flex-columns">
                    {% for testimony in entry.testimonies.all() %}
                        <div class="flex-columns__item">

                            {% set photo = testimony.photo.one() %}
                            {% if photo %}
                                <img src="{{ photo.getUrl('thumbnail') }}" loading="lazy" alt="{{ testimony.clientName }}" class="flex-columns__image">
                            {% endif %}

                            <h4> {{ testimony.clientName }} </h4>
                            <p> {{ testimony.TestimonyContent }} </p>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </section>


    {% endcache %}

{% endblock %}