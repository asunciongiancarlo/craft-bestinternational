{% extends "index" %}
{% set pageTitle = entry.title %}

{% block content %}

{#    {% cache using key 'home' %}#}

        {%  set image = entry.heroImage.one() %}

       <div class="hero-wrapper">
           <div class="hero-responsive ws">
               <iframe src="https://player.vimeo.com/video/821510459?&api=1&background=1&muted=1&loop=1&autoplay=1" frameborder="0" allow="autoplay" allowfullscreen title="Best International Products"></iframe>
            </div>
       </div>
        <section class="featured-story">
                <div class="featured-story__flex content-column">

                    <div class="featured-story__content">
                        {{ entry.richText }}
                        <p>
                            <a href="products/" class="cta-link">View Products</a>
                        </p>
                    </div>                    {% if entry.photos.count() > 0 %}
                        <div class="featured-story__slider">
                            <div class="slick-slider">
                                {% for photo in entry.photos.all() %}
                                    <div><img data-lazy="{{ photo.getUrl('slider') }}" alt="{{ photo.title }}"></div>
                                {% endfor %}
                            </div>

                        </div>
                    {% endif %}
                </div>
            </section>

        <section class="section section--more-padding section--light section--angled-top">
            <div class="content-column filter-wrapper">
                <div class="banner"><img src="{{ siteUrl }}static/images/banner-products.png" alt="" ></div>
                <div class="filter-section">
                    <div class="filter-block">
                        <div class="title item">Pest</div>
                        <div class="options item">
                            {% set pests = craft.categories().group('pests') %}
                            {% for pest in pests  %}
                                <div class="option">
                                    <input type="checkbox" class="filters" value="{{ pest.title }}" />
                                    <span>{{ pest.filterLabel != '' ? pest.filterLabel : pest.title }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="filter-block">
                        <div class="title item">Category</div>
                        <div class="options item">
                            {% set categories = craft.categories().group('category') %}
                            {% for category in categories  %}
                                <div class="option">
                                    <input type="checkbox" class="filters" value="{{ category.title }}" />
                                    <span>{{ category.filterLabel != '' ? category.filterLabel : category.title }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="filter-block">
                        <div class="title item">Type / Features</div>
                        <div class="options item">
                            {% set features = craft.categories().group('typeFeatures') %}
                            {% for feature in features  %}
                                <div class="option">
                                    <input type="checkbox" class="filters" value="{{ feature.title }}" />
                                    <span>{{ feature.filterLabel != '' ? feature.filterLabel : feature.title }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="two-columns product-listings grid-iso">
                    {% set products = craft.entries.section('products').all() %}
                    {% set c = craft.entries.section('products').count() %}

                    {% cache using key 'products-listing' %}
                        {% for product in products  %}
                            <div class="two-columns__item product-item
                                {% for pest  in product.pests %}{{  pest }}{% endfor %} {% for cat  in product.category %}{{ cat }} {% endfor %} {% for type  in product.features %}{{ type }}{% endfor %}
                                ">
                                {% set photo = product.productThumbnail.one() %}
                                <div class="two-columns__content product-item__content">
                                    <h2>{{ product.title }}</h2>
                                    <p>{{ product.shortDescription }}<p>
                                        <a href="{{ product.url }}" class="cta-link">View Product</a>
                                    </p>
                                </div>
                                <div class="two-columns__image product-item__image">
                                    <a href="{{ product.url }}">
                                        {% if photo %}
                                            <img src="{{ photo.url }}" loading="lazy" alt="{{ photo.title }}">
                                        {% else %}
                                            <img src="../web/static/images/photos/mohit-suthar-a1_tFcBSp7w-unsplash.jpg" alt="Photo">
                                        {% endif %}
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    {% endcache %}

                </div>

                <div class="content-column centered testimonials no-product-found">
                    <p>Sorry, no product found please try new filter.</p>
                    <br>
                    <br>
                    <br>
                </div>

            </div>
            <div class="content-column centered testimonials">

                {{ entry.testimonyintro }}

                <div class="flex-columns">
                    {% for testimony in entry.testimonies.all() %}
                        <div class="flex-columns__item">
                            {% set photo = testimony.photo.one() %}
                            {% if photo %}
                                <img src="{{ photo.getUrl('thumbnail') }}" loading="lazy" alt="{{ testimony.clientName }}" class="flex-columns__image">
                            {% endif %}
                            <h4> {{ testimony.clientName }} </h4>
                            <p> {{ testimony.TestimonyContent }} </p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>

{#    {% endcache %}#}

{% endblock %}